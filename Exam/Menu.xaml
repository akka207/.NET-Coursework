<Window x:Class="Exam.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam" 
        xmlns:MenuControls="clr-namespace:Exam.MenuControls"
        mc:Ignorable="d" Loaded="Window_Loaded" x:Name="menu"
        Title="Menu" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <MenuControls:ScheduleControl x:Name="schedule" Visibility="Visible" Grid.Column="1"/>
        <MenuControls:PersonnelControl x:Name="personnel" Visibility="Hidden" Background="WhiteSmoke" Grid.Column="1"/>
        <MenuControls:ProfileControl x:Name="profile" Visibility="Hidden" Background="AntiqueWhite" Grid.Column="1"/>
        
        <MenuControls:MenuPanel VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="2"
                                OnMenuSelected="MenuPanel_OnMenuSelected" MinWidth="84" MaxWidth="400"/>
    </Grid>
</Window>
