<UserControl x:Class="Exam.CustomControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:CustomBorder Highlight="True" x:Name="border" Style="{StaticResource Border_CommonStyle}">
        <Grid>
            <TextBlock x:Name="placeholder" Text="Password" Foreground="Gray" VerticalAlignment="Center"/>
            <PasswordBox FontSize="12px" BorderThickness="0px" x:Name="passwordBox" Height="90" VerticalAlignment="Center" Background="Transparent" PasswordChanged="passwordBox_TextChanged" IsKeyboardFocusedChanged="passwordBox_IsKeyboardFocusedChanged" Padding="5 38 0 0"/>
        </Grid>
    </local:CustomBorder>
</UserControl>
