<UserControl x:Class="Exam.CustomControls.TextButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Exam.CustomControls"
             mc:Ignorable="d" x:Name="control"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{Binding ElementName=control, Path=Text}" VerticalAlignment="Center"/>
        <Button Width="Auto" Height="Auto" Background="Transparent" BorderThickness="0" Click="Button_Click"/>
    </Grid>
</UserControl>
