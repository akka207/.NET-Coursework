<Window x:Class="Exam.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exam"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <TextBox Height="25px" Width="150px" Margin="0 0 0 190" Text="Login"/>
        <TextBox Height="25px" Width="150px" Margin="0 0 0 125" Text="Full Name"/>
        <TextBox Height="25px" Width="150px" Margin="0 0 0 60" Text="Password"/>
        <TextBox Height="25px" Width="150px" Margin="0 5 0 0" Text="Password confirmation"/>
        <TextBox Height="25px" Width="150px" Margin="0 70 0 0" Text="Phone"/>
        <TextBox Height="25px" Width="150px" Margin="0 135 0 0" Text="Email"/>
        <Button Height="25px" Width="150px" Margin="0 200 0 0" Content="Confirm" Background="White"/>
    </Grid>
</Window>
